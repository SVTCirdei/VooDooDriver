<!-- Unit test for findElement

     The possible combinations are:
     Modifiers:
        exists
        required
        index
     Selenium selectors:
        class
        css
        id
        name
        value
        xpath
     VDD selectors:
        title  [filefield]
        action [form]
        method [form]
        alt    [image]
        src    [image]
        for    [label]
        href   [link]
-->
<voodoo>
   <browser url="{@global.url}/tests/test-data/find-elements.html"/>

   <!-- positive tests, no modifier -->

   <puts text="Find by class"/>
   <link click="false" class="class_1"/>

   <puts text="Find by css"/>
   <link click="false" css="a[class=&quot;css_1&quot;]"/>

   <puts text="Find by id"/>
   <link click="false" id="id_1"/>

   <puts text="Find by name"/>
   <link click="false" name="name_1"/>

   <!-- value -->

   <puts text="Find by xpath"/>
   <link click="false" xpath="/html/body/div/a"/>

   <!-- title -->
   <!-- action -->
   <!-- method -->
   <!-- for -->

   <puts text="Find by alt"/>
   <image alt="N5629N"/>

   <puts text="Find by src"/>
   <image src="N5629N.jpg"/>

   <puts text="Find by href"/>
   <link click="false" href="{@global.url}/tests/test-data/find-elements.html"/>

   <!-- positive tests, modifier -->

   <puts text="Find by id, exists=true, element exists"/>
   <link click="false" id="id_1" exists="true"/>

   <puts text="Find by id, exists=false, required=false, element does not exist"/>
   <link click="false" id="id_0" exists="false" required="false"/>

   <puts text="Find by id, required=true, element exists"/>
   <link click="false" id="id_1" required="true"/>

   <puts text="Find by id, required=false, element exists"/>
   <link click="false" id="id_1" required="false"/>

   <puts text="Find by id, required=false, element does not exist"/>
   <link click="false" id="id_0" required="false"/>

   <puts text="Find by name, index=1"/>
   <link click="false" name="name_2" index="1"/>

   <!-- negative tests, no modifier -->

   <puts text="Find by class, FAIL"/>
   <link click="false" class="class_0"/>

   <puts text="Find by css, FAIL"/>
   <link click="false" css="a[class=&quot;css_0&quot;]"/>

   <puts text="Find by id, FAIL"/>
   <link click="false" id="id_0"/>

   <puts text="Find by name, FAIL"/>
   <link click="false" name="name_0"/>

   <!-- value -->

   <puts text="Find by xpath, FAIL"/>
   <link click="false" xpath="/html/body/div/XXX"/>

   <!-- title -->
   <!-- action -->
   <!-- method -->
   <!-- alt -->
   <!-- for -->

   <puts text="Find by href, FAIL"/>
   <link click="false" href="not here"/>

   <!-- negative tests, modifier -->

   <puts text="Find by id, exists=true, element does not exist, FAIL"/>
   <link click="false" id="id_0" exists="true"/>

   <puts text="Find by id, exists=false, element exists, FAIL"/>
   <link click="false" id="id_1" exists="false"/>

   <puts text="Find by id, required=true, FAIL"/>
   <link click="false" id="id_0" required="true"/>

   <puts text="Find by name, index=2, FAIL"/>
   <link click="false" name="name_2" index="2"/>

</voodoo>
